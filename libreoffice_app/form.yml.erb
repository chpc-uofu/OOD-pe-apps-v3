<%
app_name = "LibreOffice"
mod_name = "matlab"
template_root = "/var/www/ood/apps/templates/"
#modulecmd = template_root + 'getmodules.sh' + " " + mod_name
#modules = %x[ #{modulecmd}]
modules = File.read(template_root+mod_name+".txt")
%>
---
title: <%= app_name %>
attributes:
  cluster:
    widget: select
    options:
      - redwood
<% IO.foreach(template_root+"bristlecones_v2") do |line| %>
<%= line %>
<% end %>    
<% IO.foreach(template_root+"cluster-help") do |line| %>
<%= line %>
<% end %>    
  custom_accpart:
    widget: select
    options:
      <%- CustomAccPart.accpart.each do |g| %>
      - "<%= g %>"
      <%- end %>
<% IO.foreach(template_root+"accpart-help") do |line| %>
<%= line %>
<% end %>    

<% IO.foreach(template_root+"job_params_v32") do |line| %>
<%= line %>
<% end %>   

form:
  - cluster
  - custom_accpart
  - num_cores
  - bc_num_hours
  - advanced_options
  - memtask
  - gpu_type
  - gpu_count
  - nodelist
  - bc_vnc_resolution
  - bc_email_on_started
